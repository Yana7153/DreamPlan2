<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- For the title input -->
    <style name="TitleInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="hintTextColor">@color/purple_500</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- For the description input -->
    <style name="DescriptionInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_200</item>
        <item name="hintTextColor">@color/purple_200</item>
    </style>

    <!-- For date buttons -->
    <style name="DateButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/purple_500</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <!-- For recurrence toggle buttons -->
    <style name="RecurrenceButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- For spinners -->
    <style name="SpinnerStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/purple_200</item>
    </style>

    <!-- Add this to your styles.xml -->
    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="strokeWidth">1dp</item>
        <!-- For selected state -->
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <!-- For unselected state -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.ToggleButton</item>
    </style>

    <style name="ThemeOverlay.ToggleButton" parent="">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/purple_500</item>
    </style>

    <style name="SectionStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/lighter_gray</item>
    </style>

    <style name="RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">36dp</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/primary_color</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitle</item>
    </style>

    <style name="DialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>

        <item name="alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="colorSurface">@android:color/white</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="background">@drawable/dialog_bg</item>
    </style>

    <style name="SettingsCardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Add to colors.xml -->
    <color name="card_stroke">#1E000000</color>

