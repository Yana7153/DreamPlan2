<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/dialog_background"> <!-- Rounded corners background -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section Name -->
        <EditText
            android:id="@+id/et_section_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Section Name"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <!-- Date Picker -->
<!--        <DatePicker-->
<!--            android:id="@+id/date_picker"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="16dp"/>-->

<!--        &lt;!&ndash; Priority Spinner &ndash;&gt;-->
<!--        <Spinner-->
<!--            android:id="@+id/spinner_priority"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="16dp"/>-->

        <!-- Reminders Checkbox -->
        <CheckBox
            android:id="@+id/cb_reminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Reminders"
            android:layout_marginBottom="16dp"/>

        <!-- Notes -->
        <EditText
            android:id="@+id/et_notes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Notes"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp"/>

        <!-- Color Selection Button -->
        <Button
            android:id="@+id/btn_select_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Color"
            android:backgroundTint="@color/lighter_gray"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_section"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save Section"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>
